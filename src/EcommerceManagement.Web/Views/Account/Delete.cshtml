@model EcommerceManagement.Web.Dtos.Accounts.Commands.DeleteModalDto

@{
    <link rel="stylesheet" href="~/css/Account.css">
}

<div class="modal fade" id="DeleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAccountModalLabel">Delete Account</h5>
                <i class="mdi mdi-close-circle-outline" data-bs-dismiss="modal" aria-label="Close"></i>

            </div>
            <div class="modal-body">
                <form asp-action="Delete" asp-controller="Account" method="post">
                    <input asp-for="ID" type="hidden" id="accountIdToDelete" />

                    <p>Are you sure you want to delete this account?</p>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
