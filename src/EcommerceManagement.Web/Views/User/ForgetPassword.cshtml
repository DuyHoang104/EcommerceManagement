@model EcommerceManagement.Web.Dtos.Users.Commands.ForgetPasswordModalDto

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/style.css">
}

<div class="container py-5" style="margin-top: 50px;">
    <div class="row mb-5">
        <div class="col-lg-6 offset-lg-3 text-center">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["ErrorMessage"]
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card p-4">
                <h1 class="text-center">Reset Password</h1>
                <div class="alert text-center">
                    Remember your password? <a asp-action="Login" asp-controller="User">Click here</a> to login.
                </div>
                <form asp-action="ForgetPassword" method="post">
                    <div class="form-group mb-4 custom-form-group">
                        <input type="hidden" asp-for="Email" />
                    </div>

                    <div class="form-group mb-4 custom-form-group">
                        <input asp-for="Password" type="password"
                            class="form-control input-dark @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : (ViewData.ModelState["Password"] != null ? "is-valid" : ""))"
                            placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>

                    <div class="form-group mb-4 custom-form-group">
                        <input asp-for="ConfirmPassword" type="password"
                            class="form-control input-dark @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : (ViewData.ModelState["Password"] != null ? "is-valid" : ""))"
                            placeholder="ReEnter new password" />
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>

                    <div class="form-group d-flex gap-2 mt-4">
                        <button class="btn btn-primary btn-lg py-3 btn-block  w-100" type="submit">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
